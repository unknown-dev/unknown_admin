<% if allow? "admin/#{resource_class.model_name.to_s.pluralize.underscore}","edit" %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_resource_url(resource), :class => 'btn btn-default btn-xs' %>
<% end %>
<% if allow? "admin/#{resource_class.model_name.to_s.pluralize.underscore}","destroy" %>                
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            resource_path(resource),
            :method => :delete,
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-xs btn-danger' %>
<% end %>