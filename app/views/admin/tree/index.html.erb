<div class="page-header">
  <h1><%=t '.title', :default => resource_class.model_name.human %></h1>
</div>


<div id="node_tree" >
  <% collection.each do |root_folder| %>
 		<%= div_for root_folder do %>
    	<%= nested_nodes root_folder.subtree.arrange() %>
    <% end %>
  <% end %>
</div>

<div class="form-actions">
  <%= link_to t('.new', :default => t("helpers.links.new")),
            new_resource_path(:configuration),
            :class => 'btn btn-primary' %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              collection_url, :class => 'btn btn-default'  %>
</div>
